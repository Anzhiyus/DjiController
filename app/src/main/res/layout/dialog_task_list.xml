<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/add_task"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/add" />
            <ImageButton
                android:id="@+id/remove_task"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"
                android:src="@drawable/remove" />
            <ImageButton
                android:id="@+id/edit_task"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"
                android:src="@drawable/options" />
            <ImageButton
                android:id="@+id/refresh_taskList"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/refresh" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/close_taskList"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/close" />
    </RelativeLayout>
    <View android:layout_height="1px" android:background="#707070" android:layout_width="fill_parent" android:layout_margin="5dp"></View>
    <GridView
        android:padding="5dp"
        android:id="@+id/tasklist"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        android:horizontalSpacing="10dp"
        android:numColumns="5"
        android:verticalSpacing="10dp" />
</LinearLayout>