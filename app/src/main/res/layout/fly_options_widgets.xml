<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="30dp">
            <TextView
                android:textSize="18sp"
                android:text="飞行高度"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18sp"
                android:id="@+id/check_flyheight"
                android:text="200"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18sp"
                android:text="m"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_flyheight_check"
                android:src="@drawable/ok"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="30dp">
            <TextView
                android:textSize="18sp"
                android:text="变高飞行高度"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18sp"
                android:id="@+id/check_changeflyheight"
                android:text="200"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18sp"
                android:text="m"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_changeflyheight_check"
                android:src="@drawable/error"
                android:layout_width="22dp"
                android:layout_height="22dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="30dp">
            <TextView
                android:textSize="18sp"
                android:text="限飞区域检查"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_check_flyzone"
                android:src="@drawable/warning"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="30dp">
            <TextView
                android:textSize="18sp"
                android:text="总航线长度"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18sp"
                android:id="@+id/total_flylength"
                android:text="30.5"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18sp"
                android:text="KM"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp">
            <TextView
                android:textSize="18sp"
                android:text="拍照间隔"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18sp"
                android:id="@+id/photospace"
                android:text="5"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18sp"
                android:text="M"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp">
            <TextView
                android:textSize="18sp"
                android:id="@+id/total_flypoints"
                android:text="总航点数"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18sp"
                android:text="122"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>




</LinearLayout>