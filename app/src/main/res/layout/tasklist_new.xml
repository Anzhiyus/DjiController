<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@color/qmui_config_color_white" android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:padding="12dp" android:id="@+id/addBtn"
            android:layout_width="40dp" android:src="@drawable/add"
            android:layout_height="40dp" />
        <TextView
            android:text="任务列表"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView android:padding="12dp" android:id="@+id/closeBtn"
            android:layout_width="40dp" android:src="@drawable/close"
            android:layout_alignParentRight="true"
            android:layout_height="40dp" />
    </RelativeLayout>
    <com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout>
</LinearLayout>